<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apple.cowbull.game">
    <EditText
        android:id="@+id/editText"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:maxLength="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:nextFocusForward="@+id/editText3"
        />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textCapWords"
        android:maxLength="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintLeft_toRightOf="@+id/editText"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:nextFocusForward="@+id/editText4"
        />
    <EditText
        android:id="@+id/editText4"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textCapWords"
        android:maxLength="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintLeft_toRightOf="@+id/editText3"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:nextFocusForward="@+id/editText5"/>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textCapWords"
        android:maxLength="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintLeft_toRightOf="@+id/editText4"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />







    <Button
        android:id="@+id/ok"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="OK"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/editText5"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>